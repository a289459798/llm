syntax = "v1"

type LoginRequest {
    Code string `json:"code"`
}

type InfoRequest {
}

type InfoResponse {
    Token string `json:"token"`
    Amount uint32 `json:"amount"`
    Uid uint32 `json:"uid"`
}

@server(
    group: user
)
service tools {
    @handler login
    post /users/login (LoginRequest) returns (InfoResponse)
}

@server(
    jwt: Auth
    group: user
)
service tools {
    @handler userInfo
    get /users (InfoRequest) returns (InfoResponse)
}